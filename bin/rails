#!/usr/bin/env ruby

# Check if this is a server command
if ARGV.first == 'server' || ARGV.first == 's'
  # Use our auto-starting Rails server script
  exec(File.expand_path('../rails-server-auto', __FILE__), *ARGV[1..-1])
else
  # For all other commands, use the standard Rails command
  APP_PATH = File.expand_path('../config/application', __dir__)
  require_relative "../config/boot"
  require "rails/commands"
end
